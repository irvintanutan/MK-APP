<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.MainActivity">

        <RelativeLayout
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientbackground"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp">

                <TextView
                    android:id="@+id/salesHeaderTextView"
                    style="@style/reportContentText"
                    android:text="Total Sales"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/totalSales"
                    style="@style/viewParent.headerText"
                    android:layout_below="@id/salesHeaderTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:text="$15,990.00"
                    android:textColor="@color/whiteTextColor" />


            </RelativeLayout>
            <LinearLayout
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerLayout"
                android:layout_marginTop="-50dp">

                <androidx.cardview.widget.CardView
                    style="@style/reportsCardStyle"
                    android:onClick="month"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/reportContentText"
                            android:text="This Month" />

                        <TextView
                            android:id="@+id/thisMonth"
                            style="@style/viewParent.headerText2"
                            android:text="$9,999,999.99" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/reportsCardStyle"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/reportContentText"
                            android:text="Collectibles" />

                        <TextView
                            android:id="@+id/receivables"
                            style="@style/viewParent.headerText2"
                            android:text="$200.00" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user_view"
                android:layout_below="@id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_335sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:scrollbars="none" />

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/versionName"
                android:padding="@dimen/_10sdp"
                android:text="v.2.9"
                android:textColor="#BDBDBD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

</RelativeLayout>